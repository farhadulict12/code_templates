#include <bits/stdc++.h>
using namespace std;

#define int long long
const int N = 1025, mod = 1e9 + 7;

int f[N], invf[N];

int power(int a, int b) {
    int res = 1;
    a = (a + mod) % mod;
    while (b) {
        if (b & 1) res = res * a % mod;
        a = a * a % mod;
        b >>= 1;
    }
    return res;
}

void init_factorials() {
    f[0] = 1;
    for (int i = 1; i < N; i++) f[i] = f[i - 1] * i % mod;
    invf[N - 1] = power(f[N - 1], mod - 2);
    for (int i = N - 2; i >= 0; i--) invf[i] = invf[i + 1] * (i + 1) % mod;
}

int nCr(int n, int r) {
    if (n < r || r < 0) return 0;
    return f[n] * invf[r] % mod * invf[n - r] % mod;
}

int nPr(int n, int r) {
    if (n < r || r < 0) return 0;
    return f[n] * invf[n - r] % mod;
}

void test() {
    int n, m;
    cin >> n >> m;
    cout << nCr(n + 2 * m - 1, 2 * m) << "\n";
}
signed main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
   init_factorials();
    int tt = 1;
    //cin >> tt;
    while (tt--) {
        test();
    }
    return 0;
}
//https://codeforces.com/contest/1288/problem/C
